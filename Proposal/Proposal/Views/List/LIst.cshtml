@model List<Proposal.Models.TeProposal>  
@using Proposal.Models  
@{  
    ViewData["Title"] = "提案書一覧";  
    var years = ViewBag.Years as List<int> ?? new List<int>();  
    var statuses = ViewBag.Statuses as List<ProposalStatus> ?? new List<ProposalStatus>();  
    int? selectedYear = ViewBag.SelectedYear as int?;  
    int? selectedStatus = ViewBag.SelectedStatus as int?;  
}  

<h2 class="mb-4">提案書一覧【提案書作成メニュー】</h2>  

<div id="search-list-top" class="p-3 mb-4" style="background-color: #007bff; border-radius: 8px; max-width: 600px;">  
    <form method="get" asp-controller="Proposal" asp-action="List">  
        <div class="d-flex align-items-center gap-3">  
            <select name="year" class="form-select" style="width: 120px;">  
                <option value="">すべて</option>  
                @foreach (var y in years)  
                {  
                    <option value="@y" selected="@(selectedYear == y ? "selected" : null)">@y 提案年度</option>  
                }  
            </select>  
            <input type="date" name="date" class="form-control" style="width: 160px;">  
            <select name="status" class="form-select" style="width: 120px;">  
                <option value="">すべて</option>  
                @foreach (var s in statuses)  
                {  
                    <option value="@((int)s)" selected="@(selectedStatus == (int)s ? "selected" : null)">@s.ToString()</option>  
                }  
            </select>  
        </div>  
        <div class="d-flex justify-content-end gap-2 mt-3">  
            <button type="submit" class="btn btn-light">検索</button>  
            <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("List", "Proposal")'">クリア</button>
            <button type="button" class="btn btn-outline-light" onclick="history.back();">戻る</button>  
        </div>  
    </form>  
</div>  

<h5 class="mb-3">提案書一覧</h5>  
<div class="table-responsive">  
    <table class="table table-bordered table-sm bg-white">  
        <thead class="table-primary">  
            <tr>  
                <th>提案年度</th>  
                <th>提案番号</th>  
                <th>状態</th>  
                <th>提案題名</th>  
                <th>提案者氏名・グループ名</th>  
                <th>所属</th>  
                <th>提出日</th>  
                <th>評点</th>  
                <th>判定</th>  
                <th>追加進達</th>  
                <th>審査課</th>  
                <th>関係課</th>  
                <th>入賞区分</th>  
                <th>提案書</th>  
            </tr>  
        </thead>  
        <tbody>  
            @foreach (var p in Model)  
            {  
                <tr>  
                    <td>@p.ProposalYear</td>  
                    <td>@p.Id</td>  
                    <td>@p.StatusDisplay</td>  
                    <td>@p.PdName</td>  
                    <td>@p.UserName</td>
                    <td>@p.FromDisplay</td>
                    <td>@p.SubmittedAt?.ToString("yyyy-MM-dd")</td>  
                    <td>@p.Point</td>
                    <td>@p.DecisionDisplay</td>
                    <td>@p.Resubmission</td>  
                    <td>@p.ReviewSection</td>  
                    <td>@p.RelatedSections</td>  
                    <td>@p.AwardDivision</td>  
                    <td>  
                        <a href="#">@p.PdName</a>  
                    </td>  
                </tr>  
            }  
        </tbody>  
    </table>  
</div>