@model Proposal.Models.LoginModel
@{
    ViewData["Title"] = "ログイン";
}

<link rel="stylesheet" href="~/Proposal.styles.css" asp-append-version="true" />
<body class="body_style" style="background-color: #E9E9E9; ">
@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}
    <div style="display: grid; place-items: center; padding-top: 10%;">
        <div style="background-color: #fff; padding: 40px; border-radius: 10px; box-shadow: 0 0 5px rgba(0, 0, 0, 0.5); text-align: left;">
            <div class="container" style="height: 100%;">
                <h2 class="text-center mb-4">提案書作成提出システム<br>ログイン</h2>
                <form asp-action="Login" asp-controller="Login" method="post">
                    <div class="mb-3">
                        @Html.LabelFor(m => m.UserId, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.UserId, new { @class = "form-control", required = "required", minlength = "4", maxlength = "20" })
                        @Html.ValidationMessageFor(m => m.UserId, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required", minlength = "8", maxlength = "32" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" name="action" value="login" class="btn btn-primary" style="background-color: #136AA8;margin-top: 10%; padding-top: 10px;padding-bottom: 10px;margin-bottom: 10%;">
                            ログイン
                        </button>
                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger mt-3 text-center">@ViewBag.Error</div>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>