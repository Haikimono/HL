@{
    ViewData["Title"] = "パスワードリセット";
    Layout = "~/Views/Shared/_Layout.cshtml"; // 如果你有统一布局
}
<head>
    <style>
        link rel="stylesheet" href="~/Proposal.styles.css" asp-append-version="true" / >
        body {
            font-family: "Segoe UI", sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }


        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .text-muted {
            color: #6c757d;
            text-align: center;
            font-size: 14px;
            margin-bottom: 20px;
        }

        .form-label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 14px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 8px;
        }

        .btn-primary {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            background-color: #136AA8;
            border: none;
            color: white;
            border-radius: 8px;
            cursor: pointer;
        }

            .btn-primary:hover {
                background-color: #136AA8;
            }

        .alert {
            margin-top: 15px;
            padding: 10px;
            background-color: pink;
            color: #0c5460;
            border-radius: 8px;
        }

        .text-center {
            text-align: center;
        }

        .mt-3 {
            margin-top: 1rem;
        }

        .mt-5 {
            margin-top: 3rem;
        }

        a {
            color: #007bff;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body style="background-color: #E9E9E9;">
<div class="container mt-5" style="max-width: 400px;">
    <h2 class="text-center mb-4">パスワードをお忘れですか？</h2>

    <p class="text-muted text-center">
        登録済みのメールアドレスを入力してください。<br />
        パスワードをリセットするリンクをお送りします。
    </p>

    <form asp-action="SendResetLink" asp-controller="ForgetPass" method="post">
        <div class="mb-3">
            <label for="email" class="form-label">メールアドレス</label>
            <input type="email" name="email" class="form-control" required placeholder="you@example.com" />
        </div>

        <button type="submit" class="btn btn-primary w-100">リセットリンクを送信</button>
    </form>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info mt-3">@ViewBag.Message</div>
    }

    <div class="text-center mt-3">
        <a href="/Login">ログイン画面に戻る</a>
    </div>
</div>
</body>
