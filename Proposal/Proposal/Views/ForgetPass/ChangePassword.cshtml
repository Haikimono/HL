@{
    ViewData["Title"] = "パスワードの変更";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/Proposal.styles.css" asp-append-version="true" />
    <style>
        body {
            font-family: "Segoe UI", sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .text-muted {
            color: #6c757d;
            text-align: center;
            font-size: 14px;
            margin-bottom: 20px;
        }

        .form-label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 14px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 8px;
        }

        .btn-primary {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            background-color: #136AA8;
            border: none;
            color: white;
            border-radius: 8px;
            cursor: pointer;
        }

            .btn-primary:hover {
                background-color: #0d4f7f;
            }

        .alert {
            margin-top: 15px;
            padding: 10px;
            background-color: pink;
            color: #0c5460;
            border-radius: 8px;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
        }

        .text-center {
            text-align: center;
        }

        .mt-3 {
            margin-top: 1rem;
        }

        .mt-5 {
            margin-top: 3rem;
        }

        a {
            color: #007bff;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>

@{
    ViewBag.Title = "パスワードの変更";
}

<body style="background-color: #E9E9E9;">
    <div class="container mt-5" style="max-width: 400px;">
        <h2 class="mb-4 text-center">@ViewBag.Title</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form method="post" action="/ForgetPass/ChangePassword">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label for="newPassword" class="form-label">新しいパスワード</label>
                <input type="password" name="newPassword" class="form-control" required />
            </div>
            <div class="mb-3">
                <label for="confirmPassword" class="form-label">パスワード（確認）</label>
                <input type="password" name="confirmPassword" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">変更する</button>
        </form>
    </div>
</body>
