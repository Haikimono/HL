@{
    ViewData["Title"] = "パスワードの変更";
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/login.css" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body style="background-color: #f0f0f0;">
    <div class="container mt-5" style="max-width: 500px;">
        <!-- ヘッダー -->
        <div class="text-center mb-4">
            <h2>パスワードの変更</h2>
            <p>新しいパスワードを入力してください。</p>
        </div>

        <!-- エラーメッセージ表示 -->
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger alert-custom" role="alert">
                @ViewBag.Error
            </div>
        }

        <!-- パスワード変更フォーム -->
        <form method="post" action="/ChangePass/ChangePassword">
            @Html.AntiForgeryToken()

            <!-- 新しいパスワード -->
            <div class="form-group mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input type="password" name="newPassword" class="form-control" placeholder="新しいパスワード" required />
                </div>
            </div>

            <!-- パスワード確認 -->
            <div class="form-group mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input type="password" name="confirmPassword" class="form-control" placeholder="パスワード（確認）" required />
                </div>
            </div>

            <!-- 変更ボタン -->
            <button type="submit" class="btn btn-primary btn-register">変更する</button>
        </form>
    </div>
</body>
