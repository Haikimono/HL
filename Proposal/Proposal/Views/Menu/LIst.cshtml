@{
    ViewData["Title"] = "提案書一覧";
    // 示例数据，可替换为后端传递的列表
    var years = new List<string> { "2025", "2024", "2023" };
    var statuses = new List<string> { "すべて", "未審査", "審査中", "承認済み", "却下" };

    // 示例提案书数据
    var proposals = new[]
    {
        new {
            年度 = "2025", 提案号 = "001", 状态 = "審査中", 提案名字 = "業務改善案",
            提案人 = "山田太郎", 所属 = "総務部", 提出日 = "2025-04-01", 评点 = "A",
            判定 = "承認", 追加文件 = "有", 审查科 = "企画課", 关系科 = "人事課",
            入奖区分 = "金賞", 提案书 = "ダウンロード"
        }
    };
}

<h2 class="mb-4">提案書一覧</h2>

<div id="search-list-top" class="p-3 mb-4" style="background-color: #007bff; border-radius: 8px; max-width: 600px;">
    <form>
        <div class="d-flex align-items-center gap-3">
            <select name="year" class="form-select" style="width: 120px;">
                @foreach (var y in years)
                {
                    <option value="@y">@y 年度</option>
                }
            </select>
            <input type="date" name="date" class="form-control" style="width: 160px;">
            <select name="status" class="form-select" style="width: 120px;">
                @foreach (var s in statuses)
                {
                    <option value="@s">@s</option>
                }
            </select>
        </div>
        <div class="d-flex justify-content-end gap-2 mt-3">
            <button type="submit" class="btn btn-light">検 索</button>
            <button type="reset" class="btn btn-secondary">清 楚</button>
            <button type="button" class="btn btn-outline-light" onclick="history.back();">後 退</button>
        </div>
    </form>
</div>

<h5 class="mb-3">提案書一欄</h5>
<div class="table-responsive">
    <table class="table table-bordered table-sm bg-white">
        <thead class="table-primary">
            <tr>
                <th>提案年度</th>
                <th>提案号</th>
                <th>状态</th>
                <th>提案名字</th>
                <th>提案人</th>
                <th>所属</th>
                <th>提出日</th>
                <th>评点</th>
                <th>判定</th>
                <th>追加文件</th>
                <th>審查科</th>
                <th>关系科</th>
                <th>入奖区分</th>
                <th>提案书</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in proposals)
            {
                <tr>
                    <td>@p.年度</td>
                    <td>@p.提案号</td>
                    <td>@p.状态</td>
                    <td>@p.提案名字</td>
                    <td>@p.提案人</td>
                    <td>@p.所属</td>
                    <td>@p.提出日</td>
                    <td>@p.评点</td>
                    <td>@p.判定</td>
                    <td>@p.追加文件</td>
                    <td>@p.审查科</td>
                    <td>@p.关系科</td>
                    <td>@p.入奖区分</td>
                    <td>
                        <a href="#">@p.提案书</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>